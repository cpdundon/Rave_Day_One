<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_1"
        android:text="1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
    />

    <Button
        android:id="@+id/btn_2"
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_1"
    />

    <Button
        android:id="@+id/btn_3"
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_2"
    />

    <Button
        android:id="@+id/btn_4"
        android:text="4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_1"
    />
    <Button
        android:id="@+id/btn_5"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_4"
        android:layout_below="@id/btn_2"
        />

    <Button
        android:id="@+id/btn_6"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_5"
        android:layout_below="@id/btn_3"
        />
    <Button
        android:id="@+id/btn_7"
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_4"
        />
    <Button
        android:id="@+id/btn_8"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_7"
        android:layout_below="@id/btn_5"
        />

    <Button
        android:id="@+id/btn_9"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_8"
        android:layout_below="@id/btn_6"
        />

    <Button
    android:id="@+id/btn_10"
    android:text="*"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_below="@id/btn_7"
    />
    <Button
        android:id="@+id/btn_0"
        android:text="0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_10"
        android:layout_below="@id/btn_8"
        />

    <Button
        android:id="@+id/btn_11"
        android:text="#"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/btn_0"
        android:layout_below="@id/btn_9"

        />
    <TextView
        android:id="@+id/txt_title"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_10"/>

</RelativeLayout>